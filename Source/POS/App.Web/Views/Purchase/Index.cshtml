@model IEnumerable<App.Web.Mappers.PurchaseDTO>
@*@model PaginatedList<App.Web.Mappers.PurchaseDTO>*@

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Add New</a>
</p>




<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Products</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="ProductsTable">
                    <thead>
                        <tr>
                            <th>
                                PO Id
                            </th>
                            <th>
                                Customer
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.BussinessName)
                                </td>
                                @*<td>
                    @Html.DisplayFor(modelItem => item.Orderitemssales.Count)
                </td>*@
                                <td>
                                    <a asp-action="AddProduct" asp-route-id="@item.Id" class="btn btn-outline-primary">Add More</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Confirm</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ProductsTable').DataTable();
        });
    </script>
}