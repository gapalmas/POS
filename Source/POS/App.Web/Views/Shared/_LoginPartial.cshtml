<ul class="navbar-nav">
    @if (this.User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangeUser">@this.User.Identity.Name</a>
        </li>
        <li class="nav-item">
            @*<a class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>*@
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>